/* pages/videos/videos.wxss */
.listVideos {
  margin: 10px 8px 0;
}

.listVideos .videoTitle {
  display: flex;
  height: 18px;
  font-size:16px;
  justify-content: space-between;
  align-items: flex-end;
}
.listVideos .videoTitle .videoText:before{
    content:'';
    width:2px;
    background:#f06000;
    border-radius: 2px;
    display:inline-block;
    margin: 2px 4px 0 0;
    height:14px;
    align-self:center;
}
.listVideos .videoTitle .text{
    font-size:16px;
    color: #222;
}
.listVideos .videoTitle .more{
    color:#f06000;
    font-size:12px;
}

.video-flex {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 100%;
}
.video-flex .listBox {
  width:49%;
  margin-top:8px;
}
.video-flex .listBox .boxPic{
    height:95px;
}
.video-flex .listBox image{
    width:100%;
    height:100%;
    border-radius: 4px;
}
.video-flex .listBigBox {
  width:100%;
  margin-top:8px;
}
.video-flex .listBigBox .boxPic{
    height:155px;
}
.video-flex .listBigBox image{
    width:100%;
    height:100%;
    border-radius: 4px;
}


.video-flex .boxTitle,
.video-flex .boxSubTitle{
    overflow: hidden;
    width: 100%;
    display: block;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.video-flex .boxTitle {
    height: 20px;
    margin-top: 2px;
    line-height: 20px;
    font-size: 14px;
    color: #222;
}

.video-flex .boxSubTitle {
    height: 16px;
    line-height: 16px;
    font-size: 12px;
    color: #999;
}