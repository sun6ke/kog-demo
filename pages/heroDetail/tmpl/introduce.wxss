@import "../../common/gb.wxss";
.intro-wx-box {
  padding: 0 40rpx;
  border-bottom: #eaeceb solid 5px;
}
.intro-wx-hd {
  font-size: 30rpx;
  color: #bf9c53;
  line-height: 70rpx;
  border-bottom: #eaeceb solid 1px;
}
.intro-wx-bd {
  padding: 20rpx 0;
}

.jineng-tab {
  flex-direction: row;
  display: flex;
}
.jineng-tab .li {
  flex: 1;
  text-align: center;
  position: relative;
  flex-direction: column;
  display: flex;
}
.jineng-tab .li image {
  max-width: 100rpx;
  max-height: 100rpx;
  margin: 0 auto;
}
.jineng-tab .active image {
  border: #fc9c25 solid 1px;
  border-radius: 50%;
  padding: 5rpx;
}
