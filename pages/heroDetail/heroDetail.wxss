@import "../common/gb.wxss";
@import "tmpl/introduce.wxss";
@import "../wxParse/wxParse.wxss";
@import "../common/videoList.wxss";
.hero-header {
  flex-direction: row;
  display: flex;
  padding: 20rpx;
  background: #000;
  color: #fff;
}
.hero-header .hero-face {
  height: 90rpx;
  width: 90rpx;
}
.hero-header .hero-attr {
  flex-direction: column;
  display: flex;
  flex: 1;
  padding-left: 20rpx;
}
.hero-header .history {
  width: 90rpx;
}
.ico {
  display: inline-block;
  vertical-align: middle;
  overflow: hidden;
  background: url(http://ue.17173cdn.com/a/pvp/index/2017/img/sprite.png);
}
.ico-video {
  width: 36px;
  height: 36px;
  background-position: 0 -36px;
  position: absolute;
  left: 50%;
  top: 50%;
  margin: -18px 0 0 -18px;
}
.hero-video {
  width: 100%;
  height: 400rpx;
}
.hero-video image,
.hero-video video {
  width: 100%;
  height: 100%;
}

.hero-box {
  flex-direction: column;
  display: flex;
}
.hero-box .hero-box-bd {
  padding: 20rpx;
}
.nav-tabs {
  flex-direction: row;
  display: flex;
  border-bottom: #eaeceb solid 1px;
}
.nav-tabs .nav-item {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
}
.nav-tabs .nav-item-active {
  color: #fc9c25;
  border-bottom: #fc9c25 solid 2px;
}
