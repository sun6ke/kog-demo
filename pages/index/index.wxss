swiper {
  height: 400rpx;
}
.slide-image {
  width: 750rpx;
  height: 400rpx;
}
.h2 {
  font-weight: bold;
  padding: 10rpx;
}
.hero-list {
  flex-direction: row;
  display: flex;
}
.hero-list .item {
  flex: 1;
  min-width: 23%;
  max-width: 23%;
  text-align: center;
  flex-direction: column;
  display: flex;
}
.hero-list .item image {
  max-width: 120rpx;
  max-height: 120rpx;
  justify-content: center;
  text-align: center;
  margin: 0 auto;
  border-radius: 10rpx;
}
.hero-list .item text {
  font-size: 24rpx;
  padding: 10rpx 0;
}


.wx-info {
  display: flex;
  flex: 1;
  padding-bottom: 30rpx;
}
.wx-info .wx-info-img {
  max-width: 200rpx;
  max-height: 150rpx;
}
.wx-info-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
}
.wx-info-content-footer {
  display: flex;
  flex: 1;
  justify-content: space-between;
  align-items: flex-end;

  font-size: 28rpx;
  color: #bfbfbf;
}
.wx-info-content .wx-info-title {
  /*两行换行*/
  display: -webkit-box; 
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}

.like-info image {
  max-width: 40rpx;
  max-height: 40rpx;
  color: red;
  margin-bottom: -4rpx;
}
.like-info.is-click {
  color: #ff6b6b;
}